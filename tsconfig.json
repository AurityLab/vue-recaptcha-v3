{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "removeComments": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "src/types"
    ]
  },

  "exclude": [
    "node_modules",
    "demo/*"
  ]
}
